generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // change to mysql if needed
}

model PlanPage {
  id     String @id @default(uuid())
  planId String
  pageId String // FK to master Page

  plan Plan @relation(fields: [planId], references: [id], onDelete: Cascade)
  page Page @relation(fields: [pageId], references: [id], onDelete: Cascade)

  @@unique([planId, pageId])
}

model Plan {
  id          String   @id @default(uuid())
  key         String   @unique // e.g. "basic", "pro"
  name        String // "Basic", "Pro"
  price       Int // in cents or rupees (e.g. 499)
  currency    String // "INR", "USD"
  description String?
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())

  limits  PlanLimit?
  pages   PlanPage[] // which master pages are included
  tenants Tenant[]
}

model PlanLimit {
  id     String @id @default(uuid())
  planId String @unique

  maxPages    Int
  maxSections Int
  maxFields   Int
  maxUsers    Int

  plan Plan @relation(fields: [planId], references: [id], onDelete: Cascade)
}

model Tenant {
  id        String   @id @default(uuid())
  name      String
  email     String
  phone     String?
  website   String?
  address   String?
  city      String?
  country   String?
  createdAt DateTime @default(now())

  planId String?
  plan   Plan?   @relation(fields: [planId], references: [id])

  users User[]
  pages TenantPage[]
}

model User {
  id       String  @id @default(uuid())
  email    String  @unique
  password String
  name     String?
  role     String // ‚ùå this is just string, not relation
  tenantId String

  // ‚úÖ Add these:
  roleId  String?
  roleRel Role?   @relation(fields: [roleId], references: [id])

  tenant    Tenant   @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model TenantPage {
  id        String   @id @default(uuid())
  tenantId  String
  pageKey   String
  name      String
  createdAt DateTime @default(now())

  tenant   Tenant          @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  sections TenantSection[]

  @@index([tenantId])
}

model TenantSection {
  id           String @id @default(uuid())
  tenantPageId String
  key          String
  title        String
  order        Int
  layoutJson   Json
  stylesJson   Json

  page   TenantPage    @relation(fields: [tenantPageId], references: [id], onDelete: Cascade)
  fields TenantField[]

  @@index([tenantPageId])
}

model TenantField {
  id              String @id @default(uuid())
  tenantSectionId String
  key             String
  label           String
  type            String
  order           Int
  uiJson          Json
  stylesJson      Json
  validationJson  Json

  section TenantSection @relation(fields: [tenantSectionId], references: [id], onDelete: Cascade)

  @@index([tenantSectionId])
}

model Page {
  id          String   @id @default(uuid())
  key         String   @unique
  name        String
  description String?
  createdAt   DateTime @default(now())

  sections  Section[]
  planPages PlanPage[]
}

model Section {
  id         String @id @default(uuid())
  pageId     String
  key        String
  title      String
  order      Int
  layoutJson Json
  stylesJson Json

  page   Page    @relation(fields: [pageId], references: [id], onDelete: Cascade)
  fields Field[]

  @@index([pageId])
}

model Field {
  id        String @id @default(uuid())
  sectionId String
  key       String
  label     String
  type      String
  order     Int

  uiJson         Json
  stylesJson     Json
  validationJson Json // üëà regex goes here

  section Section @relation(fields: [sectionId], references: [id], onDelete: Cascade)

  @@index([sectionId])
}

model Permission {
  id              String           @id @default(uuid())
  key             String           @unique // e.g. "employee.create"
  name            String
  rolePermissions RolePermission[]
}

model Role {
  id       String @id @default(uuid())
  name     String // "ADMIN", "HR", "MANAGER"
  tenantId String

  users       User[]
  permissions RolePermission[]
}

model RolePermission {
  id           String @id @default(uuid())
  roleId       String
  permissionId String

  role       Role       @relation(fields: [roleId], references: [id], onDelete: Cascade)
  permission Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([roleId, permissionId])
}
